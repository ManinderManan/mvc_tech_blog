<article class="post">
   <div class="whole-post">
      <div class="info-srction">
         <div class="post-name">
            <a href="/post/{{id}}" class="links">{{title}}</a>
         </div>
         <div class="create-by">
            <p id="comment-subtitle">
               Created by <b>{{user.username}}</b> on <b>{{formatDate created_at}}</b>
            </p>
         </div>
      </div>
      <div class="content-sections">
         <p>{{Content}}</p>
      </div>
   </div>
</article>